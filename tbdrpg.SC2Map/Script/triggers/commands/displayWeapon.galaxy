bool gt_Weapons_Func (bool testConds, bool runActions) {
  playerData_r lr_player = gv_players[EventPlayer() - 1];


  if (!runActions) {
    return true;
  }
  UIDisplayMessage(lr_player.playerGroupSingle, c_messageAreaSubtitle, IntToText(UnitWeaponCount(lr_player.dragon)));
  return true;
}

void gt_Weapons_Init () {
  gt_Weapons = TriggerCreate("gt_Weapons_Func");
  TriggerAddEventChatMessage(gt_Weapons, c_playerAny, "-wp", true);
}
